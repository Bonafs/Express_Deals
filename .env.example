# Express Deals Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Django Settings
SECRET_KEY=your-django-secret-key-here-make-it-long-and-complex
DEBUG=False

# Database Configuration
DATABASE_URL=postgres://user:password@host:port/database

# Email Configuration (Yahoo Mail SMTP)
EMAIL_HOST_USER=your-email@yahoo.com
EMAIL_HOST_PASSWORD=your-yahoo-app-password
DEFAULT_FROM_EMAIL=Express Deals <your-email@yahoo.com>

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid-starting-with-AC
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+your-twilio-phone-number

# WhatsApp Configuration (Meta Business API)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-business-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Stripe Configuration (Use test keys for development/demo)
# Get your test keys from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_FROM_DASHBOARD_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_FROM_DASHBOARD_HERE
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret_for_development_demos

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ALWAYS_EAGER=False